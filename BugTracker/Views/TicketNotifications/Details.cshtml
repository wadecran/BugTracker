@model BugTracker.Models.TicketNotification

@{
	ViewBag.Title = "Details";
}


<div class="content">
	<br />
	<div class="row">
		<div class="col">
			<div class="card card-default">
				<div class="card-header">
					<div class="card-title">
						<h3>Notification for <a href="@Url.Action("Dashboard", "Tickets", new { id = Model.TicketId })">@Model.Ticket.Issue</a></h3>
						<div class="user-block card-tools">
							@if (Model.IsRead)
							{
								<span class="badge badge-primary">Marked as Read</span>
							}
						</div>
					</div>
				</div>
				<div class="card-body">
					<p>@Model.Body</p>
					@if (!Model.IsRead)
					{
						using (Html.BeginForm("MarkAsRead", "TicketNotifications", new { id = Model.Id }))
						{
							@Html.AntiForgeryToken()
							<button type="submit" class="btn btn-primary">Mark As Read</button>
						}
					}
				</div>
			</div>
		</div>
	</div>






</div>
