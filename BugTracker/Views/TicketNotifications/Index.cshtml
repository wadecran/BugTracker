@model IEnumerable<BugTracker.Models.TicketNotification>

@{
	ViewBag.Title = "Notifications";
}




<div class="content">
	<br />
	<div class="row">
		<div class="col">
			<div class="card card-default">
				<div class="card-header">
					<div class="card-title">
						<h3>Notifications</h3>
					</div>
				</div>
				<div class="card-body">
					<table class="table">
						<thead>
							<tr>
								<th>
									@Html.DisplayName("Ticket")
								</th>
								<th>
									@Html.DisplayName("Project")
								</th>
								<th>
									@Html.DisplayName("Subject")
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Created)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.IsRead)
								</th>
								<th></th>
							</tr>
						</thead>

						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.Ticket.Issue)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Ticket.Project.Name)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Subject)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Created)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.IsRead)
									</td>
									<td>
										@Html.ActionLink("Read", "Details", new { id = item.Id })
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	
</div>