@model IEnumerable<BugTracker.Models.ApplicationUser>
	@using BugTracker.Utilities
@{
	ViewBag.Title = "Users";
	RoleHelper roleHelper = new RoleHelper();
}

<br />
<div class="content">
	<div class="card card-default">
		<div class="card-header">
			<h3 class="card-title">
				Users
			</h3>
		</div>
		<div class="card-body">
			<table class="table">
				<thead>
					<tr>
						<th>
							@Html.DisplayName("Full Name")
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Email)
						</th>
						<th>
							Role
						</th>

						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var user in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => user.FullName)
							</td>
							<td>
								@Html.DisplayFor(modelItem => user.Email)
							</td>
							<td>
								@roleHelper.ListUserRoles(user.Id).FirstOrDefault()
							</td>
							<td>
								@Html.ActionLink("Details", "UserDashboard", "Account", new { id = user.Id }, null)
							</td>
						</tr>
					}
				</tbody>

			</table>
		</div>
	</div>
</div>
